<?xml version="1.0"?>
<project name="BlockScheme" default="all" basedir=".">
	<!-- Properties -->
	<property name="src" value="${basedir}/src"/>
	<property name="build" value="${basedir}/build"/>
	<property name="doc" value="${basedir}/doc"/>
	<property name="client" value="${basedir}/dest-client"/>
	<property name="application" value="${client}/ija-client.jar"/>
	<property name="manifest" value="${src}/MANIFEST.MF"/>
	<property name="dest.dir" value="build"/>

	<!-- Compile -->
	<target name="compile">
		<javac
			srcdir="${src}"
			destdir="${build}"
			debug="false"
			deprecation="true"
			optimize="true"
			includeantruntime="false">
		</javac>
		<antcall target="doc"></antcall>
		<antcall target="make.jar"></antcall>
	</target>

	<!-- Jar-file creating  -->
	<target name="make.jar" description="Create jar-file">
		<jar
			jarfile="${application}"
			basedir="${build}"
			manifest="${manifest}"/>
	</target>

	<!-- Generation of documentation -->
	<target name="doc" description="Generate documentation">
		<javadoc
			encoding="UTF-8"
			charset="UTF-8"
			docencoding="UTF-8"
			sourcepath="${src}"
			destdir="${doc}">
		</javadoc>
	</target>

	<!-- Run -->
	<target name="run" description="Run the application">
		<java jar="${application}" fork="true"/>
	</target>

	<!-- Clearing -->
	<target name="clean" description="Clearing">
		<delete dir="${build}"/>
		<delete dir="${doc}"/>
		<delete dir="${client}"/>
	</target>
</project>
